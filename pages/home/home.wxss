page{
	height: aotu;
    
}
.content{ 
	display: flex;
	flex-direction: column
}

  

.background {
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: -1;
  }
.title{
	margin: 40rpx;
	text-align: center;
	font-size: 70rpx;
	font-style: italic;
    font-weight: bold;
    position: fixed;
    top:10%
}
button{
    margin-top: 30rpx;
  }
  .botter{
    margin: 0 auto;
    width: 50%;
    position: fixed;
    top:30%;
    left:25%;
  }
  .botter1{
    margin: 0 auto;
    width: 50%;
    position: fixed;
    top:45%;
    left:25%;
  }
  .botter2{
    margin: 0 auto;
    width: 50%;
    position: fixed;
    top:60%;
    left:25%;
  }
  .info {
    position: relative;
    margin: 0 auto;
    width: 716rpx;
    height: 384rpx;
}

.info .bg {
    position: absolute;
    z-index: -1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.info .top {
    display: flex;
    align-items: center;
    height: 212rpx;
    padding: 0 60rpx;
}

.info .avatar {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    border: 2rpx solid #d89416;
    overflow: hidden;
    margin-right: 20rpx;
}

.info .username {
    font-size: 44rpx;
    font-family: PingFang-SC-Heavy,serif;
    font-weight: 800;
    color: rgb(231, 175, 20);
}

.info .id {
    font-size: 24rpx;
    font-family: PingFang-SC-Bold,serif;
    font-weight: bold;
    color: rgb(228, 142, 29);
    margin-top: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.info .center {
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}